    \endhead
    \endfoot
    \bottomrule
    \endlastfoot
    %- for pfxobs in proc_fxobs_list
    \VAR{pfxobs.name} & \VAR{pfxobs.original.data_object.name}
    %- for res in pfxobs.validation_results
    %- for qfilter in quality_filters
    %- if res.flag == qfilter
    & \VAR{res.count}
